<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_margin="5dp"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_circle_background_color="@color/white"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/black"
            android:src="@drawable/doc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. ABC"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/nunito_semibold"/>
            <TextView
                android:id="@+id/specialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialist"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/nunito_light"
                android:layout_marginTop="2dp"/>
            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/nunito_light"
                android:layout_marginTop="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_baseline_thumb_up_alt_24"/>
                <TextView
                    android:id="@+id/patient_stories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi, there!"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_baseline_message_24"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#BCBCBC"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        android:gravity="center"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/consultation_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultation"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        android:gravity="center"
        android:layout_marginStart="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#BCBCBC"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:id="@+id/bookAppoint"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="@color/colorOne"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>