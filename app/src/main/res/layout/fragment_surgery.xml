<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Surgery.Surgery"
    android:orientation="vertical"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOne">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surgery"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/white"/>

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F1FBFF">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are in safe hands."
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="20sp"
                    android:justificationMode="inter_word"
                    android:layout_margin="10dp"/>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorOne"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/white"/>


                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#ededed"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="#ededed"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_person_outline_24"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:text="Expert surgeons with 10+ years of experience."
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="#ededed"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_biotech_24"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:text="Advance Surgical Technologies."
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="#ededed"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_back_hand_24"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:text="Personal Care Assistance."
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="#ededed"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_attach_money_24"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:text="Financial Aid Assistance."
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="#ededed"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_graphic_eq_24"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:text="High quality affordable surgical procedures."
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="#ededed">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="10dp"
            android:background="@drawable/box_back"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Now"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/nunito"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:background="@color/colorOne"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/nunito"/>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>