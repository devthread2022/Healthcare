<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Doctors.ConfirmAppointment"
    android:background="#ededed"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOne">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book In-Clinic Appointment"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_star_border_24"/>

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/white">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:civ_circle_background_color="@color/white"
                    app:civ_border_width="0.5dp"
                    app:civ_border_color="@color/black"
                    android:src="@drawable/doc"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. ABC"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/nunito_semibold"/>
                    <TextView
                        android:id="@+id/specialization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specialist"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/nunito_light"
                        android:layout_marginTop="2dp"/>
                    <TextView
                        android:id="@+id/experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/nunito_light"
                        android:layout_marginTop="2dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawableStart="@drawable/ic_baseline_thumb_up_alt_24"/>
                        <TextView
                            android:id="@+id/patient_stories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi, there!"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawableStart="@drawable/ic_baseline_message_24"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_local_hospital_24"
                    android:textColor="#434343"
                    android:textSize="16sp"
                    android:text="In-Clinic appointment time"
                    android:gravity="center"
                    android:fontFamily="@font/nunito"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#434343"
                    android:textSize="18sp"
                    android:text="TIME"
                    android:gravity="center"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#434343"
                    android:textSize="18sp"
                    android:text="Choose a mode of payment"
                    android:gravity="center"
                    android:fontFamily="@font/nunito"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay Online"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay At Clinic"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#434343"
                    android:textSize="18sp"
                    android:text="Safety measures followed by clinic"
                    android:gravity="center"
                    android:fontFamily="@font/nunito"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito"
                    android:text="1. Mask mandatory"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito"
                    android:text="2. Temperature check at the entrance"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito"
                    android:text="3. Sanitization of visitors"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito"
                    android:text="4. Social Distance maintained"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="70dp"
        android:background="#FAFAFA"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="20sp"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/nunito_light"
                android:textColor="@color/black"
                android:text="Apointment for"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:text="Patient Name"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/black"
            android:text="Rs.0"
            android:layout_gravity="center|start"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#979797"
            android:layout_gravity="top"/>
        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/black"
            android:text="Rs.0"
            android:layout_gravity="center|start"
            android:layout_marginStart="10dp"/>
        <LinearLayout
            android:id="@+id/bookAppoint"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="@color/colorOne"
            android:layout_gravity="center|right"
            android:layout_marginEnd="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay &amp; Confirm"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito"
                android:gravity="center"/>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>